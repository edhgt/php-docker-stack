version: '3.8'

services:
  nginx:
    build: ./nginx
    ports:
      - "80:80"
      - "443:443"
      - "5173:5173"
    volumes:
      - ~/development/php:/var/www
      - ./nginx/templates:/etc/nginx/templates
      - ./nginx/scripts:/scripts
    depends_on:
      - php
    networks:
      - app-network
    environment:
      - NGINX_HOST=localhost
      - NGINX_PORT=80
    command: ["sh", "-c", "/scripts/setup-vhost.sh && nginx -g 'daemon off;'"]

  php:
    build: ./php
    volumes:
      - ~/development/php:/var/www
    networks:
      - app-network
    environment:
      - USER_ID=1000
      - GROUP_ID=1000

        #npm:
        #build: ./npm
        #volumes:
        #- ~/development/php:/var/www
        #networks:
        #- app-network
        #environment:
        #- USER_ID=1000
        #- GROUP_ID=1000

networks:
  app-network:
    driver: bridge
